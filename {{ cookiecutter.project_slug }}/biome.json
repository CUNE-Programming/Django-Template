{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "bracketSpacing": true,
      "quoteStyle": "double",
      "semicolons": "always",
      "arrowParentheses": "asNeeded"
    }
  },
  "json": {
    "formatter": {
        "enabled": true,
        "indentSize": 2,
        "indentStyle": "space",
        "lineEnding": "lf",
        "lineWidth": 120,
        "indentWidth": 2
    }
  }
}
